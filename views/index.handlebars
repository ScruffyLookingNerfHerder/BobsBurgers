<div class="undevoured">
  <h1> Burgers of the Day! </h1>
  <ul>
    {{#each burgers}}
      {{#unless devoured}}
        {{> burgers/burger-sort devoured=true}}
      {{/unless}}
    {{/each}}
  </ul>
</div>

<div class="addeaten">
  <div class = "top">
  <h1> Burgers Devoured! </h1>
  <ul>
    {{#each burgers}}
      {{#if devoured}}
        {{> burgers/burger-sort devoured=false}}
      {{/if}}
    {{/each}}
  </ul>
</div>
<div class = "bottom">
  <h1> Add a Burger! </h1>
  <form class="createaburger">
    <label for="bgr"> Burger Name: </label>
    <input type="text" id="bgr" name="new-burger-name">
    <button type="submit"> Grill it up! </submit>
    </form>
  </div>
  </div>
